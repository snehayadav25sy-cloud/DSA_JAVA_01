// brute force 
class Solution {
    public int largestAltitude(int[] gain) {
        int n = gain.length;
        int start=0;
        int max=0;
        

        for(int i=0 ; i<n ; i++){
            gain[i]=start+gain[i];
            start=gain[i];
        }

        for(int i=0;i<n;i++){
            max=Math.max(max,gain[i]);
        }
        

        return max;

        
    }

    
}

// optimal approach
class Solution {
    public int largestAltitude(int[] gain) {
        int current = 0;       // starting altitude
        int maxAltitude = 0;   // track the highest altitude

        for (int g : gain) {
            current += g;                     // update altitude
            maxAltitude = Math.max(maxAltitude, current); 
        }

        return maxAltitude;
    }
}
